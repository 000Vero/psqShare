<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pocketbase/0.8.0-rc1/pocketbase.umd.js" integrity="sha512-rXvsONe8nnMbEMubzO3Oj1mXbromnFXo7jtDekeUJ4ZJ1UuJTc/HZ7qgTLw8oL6vdfxy3NL35slBflsaEwUhpw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/js/modals.js"></script>
    <script src="/js/notifications.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css">
    <script defer src="/js/brands.js" type="text/javascript"></script>
    <script defer src="/js/solid.js" type="text/javascript"></script>
    <script defer src="/js/nav.js" type="text/javascript"></script>
    <script defer src="/js/fontawesome.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>
    <progress class="progress is-large is-info" id="loadingBar" max="100"></progress>
    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                <p class="is-size-3 has-text-weight-bold">psqShare</p>
            </a>
            <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            </a>
        </div>
        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="buttons">
                        <button class="js-modal-trigger button is-success" id="login" data-target="login-modal">Login</button>
                        <button class="button is-danger" id="logout" onclick="logout()">Logout</button>
                        <button class="button is-primary" id="create" onclick="editor()">Nuovo articolo</button>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <div class="modal" id="login-modal">
        <div class="modal-background"></div>
        <div class="modal-card">
            <header class="modal-card-head">
                <p class="modal-card-title">Login</p>
                <button class="delete" aria-label="close"></button>
            </header>
            <section class="modal-card-body">
                <div class="field">
                    <p class="control has-icons-left has-icons-right">
                        <input class="input" type="email" id="email" placeholder="Email"/>
                        <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                        </span>
                        <span class="icon is-small is-right">
                            <i class="fas fa-check"></i>
                        </span>
                    </p>
                </div>
                <div class="field">
                    <p class="control has-icons-left">
                        <input class="input" type="password" id="password" placeholder="Password"/>
                        <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                        </span>
                    </p>
                </div>
            </section>
            <footer class="modal-card-foot">
                <div class="buttons">
                    <button class="button is-success" onclick="loginFromModal()">Login</button>
                    <button class="button">Annulla</button>
                </div>
            </footer>
        </div>
    </div>
    <ul id="articleList" class="is-centered"></ul>

    <nav class="pagination is-centered" role="navigation" aria-label="pagination">
        <ul class="pagination-list">
            <li>
                <a href="#" class="pagination-link" id="previous">1</a>
            </li>
            <li>
                <a
                    class="pagination-link is-current"
                    aria-current="page"
                    id="current"
                    >2</a
                    >
            </li>
            <li>
                <a href="#" class="pagination-link" id="next">3</a>
            </li>
        </ul>
    </nav>    

    <script src="/js/home.js"></script>
</body>
</html>